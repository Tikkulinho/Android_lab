<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/login_fragment">

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.marketplace.login.fragment.Login_fragment"
        android:label="fragment_login_fragment"
        tools:layout="@layout/fragment_login_fragment" >
        <action
            android:id="@+id/action_login_fragment_to_register_fragment"
            app:destination="@id/register_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_forgotpassword_fragment"
            app:destination="@id/forgotpassword_fragment" />
        <action
            android:id="@+id/action_login_fragment_to_timeline_fragment"
            app:destination="@id/timeline_fragment" />
    </fragment>
    <fragment
        android:id="@+id/register_fragment"
        android:name="com.example.marketplace.register.fragment.Register_fragment"
        android:label="fragment_register_fragment"
        tools:layout="@layout/fragment_register_fragment" >
        <action
            android:id="@+id/action_register_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
    </fragment>
    <fragment
        android:id="@+id/forgotpassword_fragment"
        android:name="com.example.marketplace.forgotpassword.fragment.ForgotPassword_fragment"
        android:label="fragment_forgotpassword_fragment"
        tools:layout="@layout/fragment_forgotpassword_fragment" >
        <action
            android:id="@+id/action_forgotpassword_fragment_to_login_fragment"
            app:destination="@id/login_fragment" />
    </fragment>
    <fragment
        android:id="@+id/timeline_fragment"
        android:name="com.example.marketplace.timeline.fragment.Timeline_fragment"
        android:label="fragment_timeline_fragment"
        tools:layout="@layout/fragment_timeline_fragment" >
        <action
            android:id="@+id/action_timeline_fragment_to_productdata_fragment"
            app:destination="@id/productdata_fragment" />
    </fragment>
    <fragment
        android:id="@+id/mymarket_fragment"
        android:name="com.example.marketplace.mymarket.fragment.mymarket_fragment"
        android:label="fragment_mymarket_fragment"
        tools:layout="@layout/fragment_mymarket_fragment" >
        <action
            android:id="@+id/action_mymarket_fragment_to_addProduct_fragment"
            app:destination="@id/addProduct_fragment" />
    </fragment>
    <fragment
        android:id="@+id/addProduct_fragment"
        android:name="com.example.marketplace.addproduct.fragment.AddProduct_fragment"
        android:label="AddProduct_fragment" >
        <action
            android:id="@+id/action_addProduct_fragment_to_mymarket_fragment"
            app:destination="@id/mymarket_fragment" />
    </fragment>
    <fragment
        android:id="@+id/productdata_fragment"
        android:name="com.example.marketplace.timeline.fragment.Productdata_fragment"
        android:label="fragment_productdata_fragment"
        tools:layout="@layout/fragment_productdata_fragment" />
</navigation>