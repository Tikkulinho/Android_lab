<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".update.fragment.Update_fragment">


    <TextView
        android:id="@+id/textView_profileupdate"
        android:layout_width="113dp"
        android:layout_height="70dp"
        android:text="Profile Update"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <Button
        android:id="@+id/button_saveupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.816" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/emailupdate_check"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="214dp"
        android:layout_height="82dp"
        android:layout_marginTop="12dp"
        android:hint="Email"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_saveupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_profileupdate"
        app:layout_constraintVertical_bias="0.027">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_emailupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Email"
            android:inputType="textPersonName"
            android:textColor="#5E5C5C"
            android:textColorHint="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/usernameupdate_check"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="214dp"
        android:layout_height="82dp"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_saveupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailupdate_check"
        app:layout_constraintVertical_bias="0.098">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_usernameupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Username"
            android:inputType="textPersonName"
            android:textColor="#5E5C5C"
            android:textColorHint="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/phoneupdate_check"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="214dp"
        android:layout_height="82dp"
        android:layout_marginTop="21dp"
        android:hint="Phone Number"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/button_saveupdate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameupdate_check"
        app:layout_constraintVertical_bias="0.133">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_phoneupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Phone Number"
            android:inputType="textPersonName"
            android:textColor="#5E5C5C"
            android:textColorHint="@color/white" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>